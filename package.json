{
  "name": "wzn-card-game-tests",
  "version": "1.0.0",
  "description": "TypeScript tests for WZN Card Game Solana program",
  "scripts": {
    "test": "mocha -r ts-node/register tests/**/*.ts --timeout 60000",
    "test:integration": "mocha -r ts-node/register tests/integration.ts --timeout 60000",
    "build": "anchor build",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:localnet": "anchor deploy --provider.cluster localnet"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/web3.js": "^1.95.0",
    "@solana/spl-token": "^0.4.8"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/mocha": "^10.0.0",
    "@types/chai": "^4.3.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.5.0",
    "mocha": "^10.7.0",
    "chai": "^4.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
